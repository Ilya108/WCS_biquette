{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/velo.css') }}">
    <link rel="stylesheet" href="{{ asset('build/form.css') }}">
{% endblock %}

{% block body %}
    <div id="layoutVelo">
        <!-- photo de profil + zone barre de progression -->
        <div class="container headVelo">
            <div class="row">
                <!-- photo de profil -->
                <div class="col-12 col-lg-3 offset-lg-1 photoVelo">
                    <div class="picture">

                        {% if photovelo is defined %}
                         haha ça marche paaaaaas<img src=""/>
                        {% else %}
                            <img src="{{ asset('images/velo-fond-photo.png') }}" alt="bikerr-profil" style="width: 100%;"/>
                        {% endif %}
                    </div>
                    <div class="points">
                    <div><a href="#" style="margin-left: 10px;">Le vélo de {{ membre.prenom }}</a></div>
                    <div><a href="#" style="color: green; font-weight: bold; margin-right: 10px;">{{ membre.points }} </a></div>
                    </div>
                </div>
                <!-- zone barre de progression -->
                <div class="col-12 col-lg-7 progressionVelo">
                    <div class="cont1">
                            <div class="VoirAnnonce">
                                <a href="#"><  Voir mon annonce</a>
                            </div>
                            <div class="titreVelo" style="float: right">
                                <div><h2>TYPE</h2></div>
                                <div><p>MARQUE</p></div>
                            </div>
                    </div>
                    <div class="outilsVelo">
                        <div class="checkVelo">
                            <div class="VloEnLigne">
                                <p>L'annonce du vélo est en ligne</p>
                            </div>
                            <div style="float:right">
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>

                        <div class="checkVelo">
                            <div class="VloEnLigne">
                                <p>Etre connecté uniquement par des membres vérifiés</p>
                            </div>
                            <div>
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>

                        <div class="progressbarVelo">
                            <div><p>Annonce complétée à :</p></div>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 30%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">30%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- onglets + formulaire à compléter -->
        <div class="container completeVelo">
            <div class="row">
                <!-- onglets -->
                <div class="col-12 col-lg-3 offset-lg-1 ongletVelo">
                    <div>
                        <ul>
                            <li><a href="{{ path('velo_description', {'id': velo.id}) }}">Description</a></li>
                            <li><a href="{{ path('velo_photos', {'id': velo.id}) }}">Photos</a></li>
                            <li><a href="{{ path('velo_equipement', {'id':velo.id }) }}">Equipements</a></li>
                            <li><a href="{{ path('velo_antivol', {'id': velo.id}) }}">Antivol et marquage Bicycode</a></li>
                            <li><a href="{{ path('velo_localisation', {'id': velo.id}) }}">Localisation et retrait</a></li>
                            <li><a href="{{ path('velo_calendrier', {'id': velo.id}) }}">Calendrier</a></li>
                            <li><a href="{{ path('velo_points', {'id': velo.id}) }}">Points,dépôt de garantie et assurance</a></li>
                            <li><a href="{{ path('velo_supprimer', {'id': velo.id}) }}">Supprimer le velo</a></li>
                        </ul>
                    </div>

                </div>
                <!-- formulaire -->
                <div  class="col-12 col-8 col-lg-7 formulaireVelo">
                    {% include formulaire %}
                </div>
                <div class="aidePoints"><p>Atteignez 100% en remplissant tous les champs marqués d'une astérisque et en ajoutant une photo de profil. Bikerr vous offrira 150 Points.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}