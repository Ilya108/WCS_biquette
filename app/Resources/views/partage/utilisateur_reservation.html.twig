{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/partage.css') }}">
    <link rel="stylesheet" href="{{ asset('build/form.css') }}">
    <link rel="stylesheet" href="{{ asset('build/annonce.css') }}">
{% endblock %}

{% block body %}

<div id="carousel-photos" class="justify-content-center row">
    {% for photo in velo.photos %}
        <img id="images__carousel" class="img-fluid" src="{{ asset('images/uploads/' ~ photo.image) }}" alt="Photo du vélo">
    {% endfor %}
</div>
    <h4>Le velo de Ilya</h4>
    <div class="container">
        <table>
            <tbody>
            <div class="row">
                    <div class="col-4">
                        <tr>
                            <th>Jours</th>
                            <td>8</td>
                        </tr>
                    </div>
                    <div class="col-4">
                        <tr>
                            <th>Retrait</th>
                            <div>
                                {{ form_start(reservationForm) }}
                                {{ form_widget(reservationForm) }}
                                {% for message in app.flashes('error') %}
                                    <div class="alert-danger">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <input class="bouton" type="submit" value="Enregistrer" />
                                {{ form_end(reservationForm) }}
                            </div>
                        </tr>
                    </div>
                    <div class="col-4">
                        <tr>
                            <th>Retour</th>
                        </tr>
                    </div>
            </div>
            <div class="row">
            <tr>
                <th>Points gagnés</th>
                <td>{{ velo.coutPts }}PTS/JOUR</td>
            </tr>
            </div>
            <tr>
                <th>Dépôt de garantie</th>
                <td>{{ velo.caution }}€ (5%) / {{ velo.caution * 0.05 }}€</td>
            </tr>
            <tr>
                <th>Assurance</th>
                <td>1€/JOUR</td>

            </tr>
            </tbody>
        </table>
        <table>
            <tbody>
            <tr>
                <th>Total</th>
                <td>-1200PTS/22€</td>

            </tr>
            </tbody>
        </table>
        <div class="row">
            <button type="button" class="class " href="{{ path('annonce', {'id': velo.id}) }}">J’annule ma demande de réservation</button>
            <input type="submit" class="class " value="Je confirme ma demande de réservation" />
        </div>

    </div>
{% endblock %}