    <h2>PROFIL</h2>
    <div class="form_control">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-12">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.genre) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    <div id="appbundle_membre_genre" class="row justify-content-center">
                        {% for genre in genres %}
                            <label class="containergreen col-3 ">
                                <input type="radio" {% if membre.genre==genre %}checked{% endif %} id="appbundle_membre_genre_{{ genre.id }}" name="appbundle_membre[genre]" required="required" value="{{ genre.id }}">
                                <span class="checkmark"></span>
                                <label class="form-check-label required" for="appbundle_membre_genre_{{ genre.id }}">{{ genre.genre }}</label>
                            </label>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.genre) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.nom) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom) }}
                </div>
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.prenom) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_errors(form.prenom) }}
                    {{ form_widget(form.prenom) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.codePostal) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_errors(form.codePostal) }}
                    {{ form_widget(form.codePostal) }}
                </div>
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.ville) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_errors(form.ville) }}
                    {{ form_widget(form.ville) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.email) }}
