                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.pays) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_errors(form.pays) }}
                    {{ form_widget(form.pays) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.indicTel) }}
                </div>
                <div class="col-6">
                    <div>
                        <div style="display: inline-block;">
                            {{ form_label(form.tel) }}
                        </div>
                        <div class="asterix">
                            (*)
                        </div>
                    </div>
                    {{ form_widget(form.tel, {'attr': {'pattern': '[1-9][0-9]{8}'}}) }}
                </div>
            </div>
        <div class="col-6">
            <div>
                <div style="display: inline-block;">
                    {{ form_label(form.dateNaissance, 'Date de Naissance') }}
                </div>
                <div class="asterix">
                    (*)
                </div>
            </div>
            {{ form_errors(form.dateNaissance) }}
            {{ form_widget(form.dateNaissance) }}
        </div>
        <br>
        {% do form.genre.setRendered %}
        <input type="submit" class="class bouton" value="Enregistrer" />
        {{ form_end(form) }}
    </div>

