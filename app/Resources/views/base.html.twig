            <li class="nav-item navbar-border">
                <a class="nav-link" href="#">Partage <img src="{{ asset('images/partage-over.svg') }}" alt="partage" class="navbar-icon"></a>
            </li>
            <li class="nav-item navbar-border">
                <a class="nav-link" href="#"><span style="color: green; font-weight: bolder;">200</span> PTS  </a>
            </li>
            <li class="nav-item navbar-border">
                <a class="nav-link" href="#">Profil <img src="{{ asset('images/icn-profil-over.svg') }}" alt="profil" class="navbar-icon"></a>
            </li>
        </ul>

    </div>
</nav>

<!-- fin de test -->

<nav class="navbar navbar-expand-lg nav-color">
    <a class="navbar-brand" href="/"><img src="{{ asset('images/bikerr-green.png') }}" alt="logo-bikerr"></a>
