{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/enregistrement.css') }}">
{% endblock %}

{% block body %}

    <div class="text-center">
        <img class="mt-5 mb-5" id="logo" src="{{ asset('images/bikerr-green.png') }}" alt="Logo Bikerr">
    </div>

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title align-items-center">Connexion</h5>
            </div>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
            <div class="modal-body">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="email" placeholder="Adresse email" />
                <input class="form-control mt-3" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Mot de passe"/>

                <button type="submit" class="bouton w-100 mt-3"><img class ="mr-2" src="{{ asset('images/icn-bikerr.svg') }}">Connexion</button>

                <div class="row mt-3">
                    <div class="form-check col-6" id="souvenir">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                    <a class="col-6" href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a>
                </div>

            </div>
            </form>

            <div class="modal-footer">
                <p>Vous n'avez pas encore de compte ?<a href="{{ path('fos_user_registration_register') }}"> Inscription</a></p>
            </div>
        </div>
    </div>
    <p id="copyright">©Bikerr 2018. Tous droits réservés.</p>
{% endblock %}